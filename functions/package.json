{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "engines": {
    "node": "8"
  },
  "scripts": {
    "tslint": "tslint --project tsconfig.json",
    "tsc": "tsc",
    "tsc-w": "tsc --watch",
    "css": "postcss -c postcss.config.js -o ./partials/custom-style.mustache ./src/custom-style.css",
    "css-w": "postcss -c postcss.config.js -o ./partials/custom-style.mustache ./src/custom-style.css -w",
    "watch": "npm-run-all -p tsc-w css-w",
    "sw": "workbox injectManifest",
    "get-postslist": "node ../utils/get-postslist.js",
    "build": "npm-run-all -s tsc css sw get-postslist",
    "eslint": "eslint ."
  },
  "dependencies": {
    "firebase-admin": "^5.13.1",
    "firebase-functions": "^2.0.1",
    "glob": "^7.1.2",
    "helmet": "^3.12.1",
    "highlight.js": "^9.12.0",
    "marked": "^0.4.0",
    "meta-marked": "^0.4.2",
    "mustache": "^2.3.0",
    "mz": "^2.7.0"
  },
  "devDependencies": {
    "autoprefixer": "^9.0.1",
    "babel-eslint": "^8.2.6",
    "cssnano": "^4.0.3",
    "eslint": "^4.12.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.2",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^6.0.0",
    "prettier": "^1.13.7",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1",
    "workbox-cli": "^3.4.1"
  },
  "browserslist": [
    "last 2 version",
    "> 0.25%"
  ],
  "private": true
}
