{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "engines": {
    "node": "8"
  },
  "scripts": {
    "tslint": "tslint --project tsconfig.json",
    "tsc": "tsc --project tsconfig.json",
    "tsc-w": "tsc --watch",
    "css": "postcss -c postcss.config.js -o ./partials/custom-style.mustache ./src/styles/custom-style.css",
    "css-w": "postcss -c postcss.config.js -o ./partials/custom-style.mustache ./src/styles/custom-style.css -w",
    "watch": "npm-run-all -p tsc-w css-w",
    "sw": "workbox injectManifest",
    "get-postslist": "node ../utils/get-postslist.js",
    "build": "npm-run-all -s tsc css sw get-postslist",
    "eslint": "eslint ."
  },
  "dependencies": {
    "@types/express": "^4.17.0",
    "@types/helmet": "^0.0.43",
    "@types/highlight.js": "^9.12.3",
    "@types/marked": "^0.6.5",
    "@types/mustache": "^0.8.32",
    "@types/mz": "^0.0.32",
    "@types/node": "^12.6.2",
    "firebase-admin": "^8.2.0",
    "firebase-functions": "^3.0.1",
    "glob": "^7.1.4",
    "helmet": "^3.18.0",
    "highlight.js": "^10.4.1",
    "marked": "^0.7.0",
    "meta-marked": "^0.4.2",
    "mustache": "^3.0.1",
    "mz": "^2.7.0"
  },
  "devDependencies": {
    "autoprefixer": "^9.6.1",
    "babel-eslint": "^10.0.2",
    "cssnano": "^4.1.10",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "firebase-functions-test": "^0.1.6",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "prettier": "^1.18.2",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3",
    "workbox-cli": "^4.3.1"
  },
  "browserslist": [
    "last 2 version",
    "> 0.25%"
  ],
  "private": true
}
