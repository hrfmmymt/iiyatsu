{
  "name": "iiyatsu",
  "version": "2.0.0",
  "description": "hrfmmymt's iiyatsu",
  "keywords": [],
  "author": "hrfmmymt",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "dev:content": "tsx src/scripts/build-content.ts",
    "dev:server": "vite",
    "dev": "run-p dev:content dev:server",
    "build:content": "tsx src/scripts/build-content.ts",
    "build:css": "postcss src/styles/*.css -d public/static/styles/",
    "build:app": "vite build",
    "build:routes": "tsx src/scripts/fix-routes.ts",
    "build": "run-s build:content build:css build:app build:routes",
    "preview": "wrangler pages dev",
    "deploy:build": "run-s build",
    "deploy:publish": "wrangler pages deploy",
    "deploy": "run-s deploy:build deploy:publish",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "new-post": "tsx src/scripts/new-post.ts",
    "lint": "biome lint .",
    "format": "biome format . --write"
  },
  "dependencies": {
    "hono": "^4.6.16"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.0",
    "@cloudflare/workers-types": "^4.20241218.0",
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.24.0",
    "@openameba/spindle-syntax-themes": "^2.0.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/dotenv": "^8.0.0",
    "@vitest/coverage-v8": "^4.0.0",
    "autoprefixer": "^10.4.20",
    "cssnano": "^7.0.6",
    "dotenv": "^17.0.0",
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.11.1",
    "jsdom": "^28.0.0",
    "marked": "^15.0.6",
    "marked-highlight": "^2.2.1",
    "npm-run-all2": "^7.0.2",
    "postcss": "^8.4.49",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.1.0",
    "tsx": "^4.19.2",
    "vite": "^6.0.0",
    "vitest": "^4.0.0",
    "wrangler": "^4.61.1"
  }
}
