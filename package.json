{
  "name": "iiyatsu",
  "version": "1.0.0",
  "description": "hrfmmymt's iiyatsu",
  "main": "index.js",
  "scripts": {
    "build": "run-p build-index html",
    "build-index": "tsc ./index.ts ./src/app.ts",
    "build-post-and-sw": "ts-node-dev ./utils/build_post_and_sw",
    "css": "postcss -c postcss.config.js -d ./templates/style/ --ext njk ./src/css/[!base]*",
    "deploy-prd": "vercel --prod",
    "dev": "NODE_ENV=development ts-node-dev index.ts",
    "dev-ssg": "NODE_ENV=development BUILD_SSG=true ts-node-dev index.ts",
    "get-post-info": "ts-node-dev utils/get_post_info.ts",
    "generate-html": "ts-node-dev ./utils/generate_html",
    "html": "run-s build-post-and-sw css generate-html",
    "img": "run-s img-opt webp",
    "img-opt": "ts-node-dev ./utils/img-opt.ts",
    "jest": "jest",
    "jest-cov": "jest --coverage",
    "new-post": "ts-node-dev ./utils/generate_new_post.ts",
    "run-set-recent-post-data": "ts-node-dev ./utils/set_recent_post_data.ts",
    "test": "NODE_ENV=test run-s jest",
    "test-cov": "run-s jest-cov",
    "vercel": "vercel",
    "vercel-dev": "vercel dev",
    "webp": "node ./utils/webp.js"
  },
  "keywords": [],
  "author": "hrfmmymt",
  "license": "ISC",
  "dependencies": {
    "@fastify/view": "^8.0.0",
    "@fastify/static": "^6.0.0",
    "fastify": "^4.0.0",
    "vercel": "^24.2.5"
  },
  "devDependencies": {
    "@openameba/spindle-syntax-themes": "1.1.1",
    "@tsconfig/node16": "^16.1.3",
    "@types/glob": "8.1.0",
    "@types/html-minifier": "4.0.5",
    "@types/jest": "29.5.14",
    "@types/marked": "4.3.2",
    "@types/mz": "2.7.8",
    "@types/node": "22.10.1",
    "@vercel/node": "3.2.29",
    "autoprefixer": "10.4.20",
    "cssnano": "7.0.6",
    "eslint": "9.16.0",
    "fs": "0.0.1-security",
    "glob": "11.0.0",
    "highlight.js": "11.10.0",
    "html-minifier": "4.0.0",
    "imagemin": "9.0.0",
    "imagemin-webp": "8.0.0",
    "jest": "29.7.0",
    "jimp": "0.22.12",
    "marked": "4.3.0",
    "mz": "2.7.0",
    "npm-run-all2": "5.0.2",
    "nunjucks": "3.2.4",
    "path": "0.12.7",
    "postcss": "8.4.49",
    "postcss-cli": "11.0.0",
    "postcss-import": "16.1.0",
    "prettier": "2.8.8",
    "ts-jest": "29.2.5",
    "ts-node-dev": "2.0.0",
    "typescript": "5.5.4"
  }
}
