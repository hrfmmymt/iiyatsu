{
  "name": "iiyatsu",
  "version": "1.0.0",
  "description": "hrfmmymt's weblog",
  "main": "index.js",
  "scripts": {
    "dev": "npm-run-all -p serve css-w",
    "css": "postcss -c postcss.config.js -o ./public/partials/custom-style.mustache ./public/src/custom-style.css",
    "css-w": "postcss -c postcss.config.js -o ./public/partials/custom-style.mustache ./public/src/custom-style.css -w",
    "sw": "workbox injectManifest",
    "build": "npm-run-all -s css sw",
    "lint": "eslint .",
    "serve": "firebase serve -p 4444 --only hosting,functions",
    "deploy": "firebase deploy"
  },
  "author": "hrfmmymt",
  "license": "MIT",
  "dependencies": {
    "firebase-tools": "^4.0.0",
    "global": "^4.3.2",
    "workbox-cli": "^3.4.1"
  },
  "devDependencies": {
    "autoprefixer": "^9.0.1",
    "babel-eslint": "^8.2.6",
    "cssnano": "^4.0.3",
    "eslint": "^4.12.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.2",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^6.0.0",
    "prettier": "^1.13.7"
  },
  "browserslist": [
    "last 2 version",
    "> 0.25%"
  ]
}
